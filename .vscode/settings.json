{
  // Disable all heavy features
  "extensions.ignoreRecommendations": true,
  "telemetry.telemetryLevel": "off",
  
  // Disable language servers that cause crashes
  "typescript.enablePromptUseWorkspaceTsdk": false,
  "typescript.tsserver.maxTsServerMemory": 256,
  "typescript.disableAutomaticTypeAcquisition": true,
  
  // Minimal editor features
  "editor.fontLigatures": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.autoSave": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.maxVisibleSuggestions": 5,
  "editor.parameterHints.enabled": false,
  
  // Disable validation
  "json.schemaValidation": "off",
  "json.maxItemsComputed": 100,
  "[json]": {
    "editor.defaultFormatter": null
  },
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "[typescript]": {
    "editor.defaultFormatter": null
  },
  
  // Reduce file indexing
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true
  },
  
  // Disable extensions
  "extensions.recommendations": [],
  
  // Minimal git
  "git.enabled": false,
  
  // No code analysis
  "eslint.enable": false,
  "[css]": {
    "editor.defaultFormatter": null
  }
}
